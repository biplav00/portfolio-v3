---
import About from '../components/common/About.astro';
import ContactSidebar from '../components/common/ContactSidebar.astro';
import BaseLayout from '../layouts/BaseLayout.astro';

const siteUrl = 'https://biplavsubedi.com.np';
const jsonLd = JSON.stringify({
  '@context': 'https://schema.org',
  '@graph': [
    {
      '@type': 'WebSite',
      name: 'Biplav Subedi',
      url: siteUrl,
    },
    {
      '@type': 'Person',
      name: 'Biplav Subedi',
      url: siteUrl,
      jobTitle: 'QA Engineer',
      sameAs: ['https://github.com', 'https://linkedin.com', 'https://twitter.com'],
    },
  ],
});
---

<BaseLayout title="Biplav Subedi - QA Engineer" description="QA Engineer specializing in test automation, API testing, and software reliability">
  <script slot="head" type="application/ld+json" set:html={jsonLd} />
  <About />
  <ContactSidebar />
</BaseLayout>
