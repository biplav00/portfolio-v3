---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404 - Page Not Found" description="The page you're looking for doesn't exist" noindex>
  <section class="not-found">
    <span class="not-found-code">404</span>
    <h1>Page not found</h1>
    <p>The page you're looking for doesn't exist or has been moved.</p>
    <a href="/" class="not-found-link">‚Üê Back to Home</a>
  </section>
</BaseLayout>

<style>
  .not-found {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    min-height: 60vh;
    gap: 1rem;
  }

  .not-found-code {
    font-family: 'JetBrains Mono', monospace;
    font-size: 6rem;
    font-weight: 700;
    color: var(--text-dim);
    line-height: 1;
  }

  .not-found h1 {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text);
  }

  .not-found p {
    color: var(--text-muted);
    max-width: 400px;
  }

  .not-found-link {
    margin-top: 1rem;
    color: var(--accent-red);
    text-decoration: none;
    font-weight: 500;
    transition: opacity 0.15s;
  }

  .not-found-link:hover {
    opacity: 0.8;
  }
</style>
