---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const posts = await getCollection('posts', ({ data }) => !data.draft);
const sortedPosts = posts.sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);

const formatDate = (date: Date) => {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};
---

<BaseLayout title="Blog - Biplav Subedi" description="Technical blog about QA engineering, testing best practices, and software quality">
  <section class="section">
    <div class="container">
      <header class="section-header">
        <span class="section-num">02</span>
        <h1 class="section-title">Blog</h1>
      </header>

      {sortedPosts.length === 0 && (
        <div class="empty-state">
          <p>No posts yet. Check back soon!</p>
        </div>
      )}

      <div class="posts-grid">
        {sortedPosts.map((post) => (
          <article class="post-card">
            <a href={`/blog/${post.slug}`} class="post-link">
              {post.data.coverImage && (
                <div class="post-image">
                  <img src={post.data.coverImage} alt={post.data.title} loading="lazy" />
                </div>
              )}
              <div class="post-content">
                <time class="post-date">{formatDate(post.data.publishDate)}</time>
                <h2 class="post-title">{post.data.title}</h2>
                <p class="post-excerpt">{post.data.description}</p>
                {post.data.tags && (
                  <div class="post-tags">
                    {post.data.tags.map(tag => (
                      <span class="tag">{tag}</span>
                    ))}
                  </div>
                )}
                <span class="read-more">Read more â†’</span>
              </div>
            </a>
          </article>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .section {
    padding: var(--spacing-2xl) 0;
    min-height: 100vh;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 var(--spacing-md);
  }

  .section-header {
    margin-bottom: var(--spacing-xl);
    display: flex;
    align-items: baseline;
    gap: var(--spacing-md);
  }

  .section-num {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: var(--color-muted);
  }

  .section-title {
    font-size: 2rem;
    font-weight: 600;
    letter-spacing: -0.02em;
  }

  .empty-state {
    text-align: center;
    padding: var(--spacing-2xl);
    color: var(--color-muted);
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-xl);
  }

  .post-card {
    background: #0c0c0c;
    border: 1px solid var(--color-border);
    border-radius: 12px;
    overflow: hidden;
    transition: border-color 0.3s ease, transform 0.3s ease;
  }

  .post-card:hover {
    border-color: var(--color-text);
    transform: translateY(-4px);
  }

  .post-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .post-image {
    width: 100%;
    height: 180px;
    overflow: hidden;
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .post-card:hover .post-image img {
    transform: scale(1.05);
  }

  .post-content {
    padding: var(--spacing-md);
  }

  .post-date {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--color-muted);
  }

  .post-title {
    font-size: 1.1rem;
    font-weight: 600;
    margin: var(--spacing-xs) 0;
    line-height: 1.3;
  }

  .post-excerpt {
    font-size: 0.9rem;
    color: var(--color-muted);
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-tags {
    display: flex;
    gap: 0.375rem;
    flex-wrap: wrap;
    margin: 0.5rem 0;
  }

  .tag {
    font-family: var(--font-mono);
    font-size: 0.625rem;
    color: var(--color-muted);
    background: var(--bg);
    border: 1px solid var(--color-border);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
  }

  .read-more {
    display: inline-block;
    margin-top: var(--spacing-sm);
    font-size: 0.85rem;
    color: var(--color-text);
    transition: opacity 0.3s ease;
  }

  .post-card:hover .read-more {
    opacity: 0.7;
  }

  @media (max-width: 768px) {
    .posts-grid {
      grid-template-columns: 1fr;
    }

    .section-header {
      flex-direction: column;
      gap: var(--spacing-xs);
    }
  }
</style>
