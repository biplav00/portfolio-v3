---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { formatDate } from '../../utils/format';

const posts = await getCollection('posts', ({ data }) => !data.draft);
const sortedPosts = posts.sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);
---

<BaseLayout title="Blog - Biplav Subedi" description="Technical blog about QA engineering, testing best practices, and software quality">
  <section class="blog-list">
    <h1 class="section-title">Blog</h1>

    {sortedPosts.length === 0 && (
      <div class="blog-empty">
        <p>No posts yet. Check back soon!</p>
      </div>
    )}

    <div class="blog-grid">
      {sortedPosts.map((post) => (
        <article class="blog-card">
          <a href={`/blog/${post.slug}`}>
            <div class="post-content">
              <time class="post-date" datetime={post.data.publishDate.toISOString()}>{formatDate(post.data.publishDate)}</time>
              <h2 class="post-title">{post.data.title}</h2>
              <p class="post-excerpt">{post.data.description}</p>
              {post.data.tags && (
                <div class="post-tags">
                  {post.data.tags.map(tag => (
                    <span class="tag">{tag}</span>
                  ))}
                </div>
              )}
              <span class="read-more" aria-hidden="true">Read more â†’</span>
            </div>
          </a>
        </article>
      ))}
    </div>
  </section>
</BaseLayout>
